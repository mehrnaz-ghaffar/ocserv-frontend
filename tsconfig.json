{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client"], // Important for Vite to know about its environment
    "baseUrl": "./", // Optional, depending on your file structure
    "paths": {
      "@/*": ["src/*"] // Optional alias if you want to use `@` for your src directory
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
